# Weaviate Configuration
# For local development with Docker Compose, use:
WCD_URL=http://localhost:8080
WCD_API_KEY=
# For production with Weaviate Cloud, use:
# WCD_URL=https://your-cluster.weaviate.network
# WCD_API_KEY=your-weaviate-api-key
WEAVIATE_COLLECTION_NAME=Documents

# API Configuration
RAG_HOST=0.0.0.0
RAG_PORT=8000
RAG_UPLOAD_DIR=./uploads/

# Chunking Configuration
CHUNK_SIZE=1500
CHUNK_OVERLAP=100
PDF_EXTRACT_IMAGES=False

# Embeddings Configuration
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
EMBEDDINGS_CHUNK_SIZE=200

# API Keys for Embeddings
OPENAI_API_KEY=your-openai-api-key
RAG_OPENAI_API_KEY=your-openai-api-key
RAG_OPENAI_BASEURL=https://api.openai.com/v1

# Elysia Configuration
OPENROUTER_API_KEY=your-openrouter-api-key

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
RAG_AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
RAG_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
RAG_AZURE_OPENAI_API_VERSION=2024-02-01

# HuggingFace (Optional)
HF_TOKEN=your-huggingface-token

# Ollama (Optional)
OLLAMA_BASE_URL=http://localhost:11434

# AWS Bedrock (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# Google Vertex AI (Optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Logging Configuration
DEBUG_RAG_API=False
CONSOLE_JSON=False